<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity">

    <ImageView
        android:id="@+id/activity_weather_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/activity_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:textSize="35dp"/>
    <TextView
        android:id="@+id/activity_weather_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:textSize="30dp"
        android:maxLength="15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="25dp"
        android:text="Wind"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/activity_weather_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="125dp"
        android:layout_marginRight="25dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="25dp"
        android:text="Humidity"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/activity_weather_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="175dp"
        android:layout_marginRight="25dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="//TODO\nAll relevant infos parsed from JSON"
        android:textSize="30dp"/>

</FrameLayout>